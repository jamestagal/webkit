# =============================================================================
# Webkit Production Environment Variables
# Copy this file to .env.production and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
TASK_TOKEN=generate-a-random-string-here

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_DB=webkit
POSTGRES_USER=webkit
POSTGRES_PASSWORD=your-secure-database-password

# -----------------------------------------------------------------------------
# Authentication (Google OAuth)
# -----------------------------------------------------------------------------
AUTH_PROVIDER=google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# -----------------------------------------------------------------------------
# Payments (Stripe)
# -----------------------------------------------------------------------------
PAYMENT_PROVIDER=stripe
STRIPE_API_KEY=sk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# -----------------------------------------------------------------------------
# Email (Resend)
# -----------------------------------------------------------------------------
EMAIL_PROVIDER=resend
EMAIL_FROM=noreply@webkit.au
RESEND_API_KEY=re_...

# -----------------------------------------------------------------------------
# File Storage (Cloudflare R2)
# -----------------------------------------------------------------------------
BUCKET_NAME=webkit-files
R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
R2_ACCESS_KEY=your-r2-access-key
R2_SECRET_KEY=your-r2-secret-key

# -----------------------------------------------------------------------------
# AI Services (Claude API)
# -----------------------------------------------------------------------------
# Required for AI proposal generation
ANTHROPIC_API_KEY=sk-ant-...
