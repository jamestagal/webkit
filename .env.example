# =============================================================================
# Webkit Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_PROVIDER=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Turso (optional alternative to PostgreSQL)
# TURSO_URL=
# TURSO_TOKEN=

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
AUTH_PROVIDER=google

# Google OAuth (required for google auth)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (optional)
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# Twilio SMS (optional for phone auth)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_SERVICE_SID=

# -----------------------------------------------------------------------------
# Payments (Stripe)
# -----------------------------------------------------------------------------
PAYMENT_PROVIDER=stripe
STRIPE_API_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
PUBLIC_STRIPE_PUBLISHABLE_KEY=
# STRIPE_PRICE_ID_BASIC=
# STRIPE_PRICE_ID_PREMIUM=

# -----------------------------------------------------------------------------
# Email
# -----------------------------------------------------------------------------
EMAIL_PROVIDER=resend
EMAIL_FROM=noreply@webkit.au
EMAIL_FROM_ADDRESS=noreply@webkit.au
EMAIL_FROM_NAME=Webkit
RESEND_API_KEY=

# Alternative email providers (uncomment one)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=

# EMAIL_PROVIDER=postmark
# POSTMARK_API_KEY=

# EMAIL_PROVIDER=ses
# SES_ACCESS_KEY=
# SES_SECRET_KEY=
# SES_REGION=

# EMAIL_PROVIDER=smtp
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USERNAME=
# SMTP_PASSWORD=

# -----------------------------------------------------------------------------
# File Storage (Cloudflare R2)
# -----------------------------------------------------------------------------
FILE_PROVIDER=r2
BUCKET_NAME=webkit-files
R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
R2_ACCESS_KEY=
R2_SECRET_KEY=

# Alternative: Local storage (for development)
# FILE_PROVIDER=local
# LOCAL_FILE_DIR=./uploads

# Alternative: AWS S3
# FILE_PROVIDER=s3
# S3_REGION=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=

# Alternative: Google Cloud Storage
# FILE_PROVIDER=gcs
# GOOGLE_APPLICATION_CREDENTIALS=

# Alternative: Azure Blob Storage
# FILE_PROVIDER=azblob
# AZBLOB_ACCOUNT_NAME=
# AZBLOB_ACCOUNT_KEY=

# -----------------------------------------------------------------------------
# Cloudflare (for Workers deployment)
# -----------------------------------------------------------------------------
# CLOUDFLARE_ACCOUNT_ID=
# CLOUDFLARE_API_TOKEN=
