# -----------------------------------------------------------------------------
# Email
# -----------------------------------------------------------------------------
EMAIL_PROVIDER=resend
EMAIL_FROM=noreply@webkit.au
EMAIL_FROM_ADDRESS=noreply@webkit.au
EMAIL_FROM_NAME=Webkit
RESEND_API_KEY=

# Alternative email providers (uncomment one)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=

# EMAIL_PROVIDER=postmark
# POSTMARK_API_KEY=

# EMAIL_PROVIDER=ses
# SES_ACCESS_KEY=
# SES_SECRET_KEY=
# SES_REGION=

# EMAIL_PROVIDER=smtp
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USERNAME=
# SMTP_PASSWORD=

# -----------------------------------------------------------------------------
# File Storage (Cloudflare R2)
# -----------------------------------------------------------------------------
FILE_PROVIDER=r2
BUCKET_NAME=webkit-files
R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
R2_ACCESS_KEY=
R2_SECRET_KEY=

# Alternative: Local storage (for development)
# FILE_PROVIDER=local
# LOCAL_FILE_DIR=./uploads

# Alternative: AWS S3
# FILE_PROVIDER=s3
# S3_REGION=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=

# Alternative: Google Cloud Storage
# FILE_PROVIDER=gcs
# GOOGLE_APPLICATION_CREDENTIALS=

# Alternative: Azure Blob Storage
# FILE_PROVIDER=azblob
# AZBLOB_ACCOUNT_NAME=
# AZBLOB_ACCOUNT_KEY=

# -----------------------------------------------------------------------------
# AI Services (Claude API)
# -----------------------------------------------------------------------------
# Required for AI proposal generation
ANTHROPIC_API_KEY=

# -----------------------------------------------------------------------------
# Cloudflare (for Workers deployment)
# -----------------------------------------------------------------------------
# CLOUDFLARE_ACCOUNT_ID=
# CLOUDFLARE_API_TOKEN=

# -----------------------------------------------------------------------------
# Encryption (Banking & Tax Data)
# -----------------------------------------------------------------------------
# Encryption key for banking data (32 bytes, base64-encoded)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
ENCRYPTION_KEY=
